package koreait.test1;

import java.util.ArrayList;
import java.util.Comparator;
import java.util.List;
import java.util.Scanner;

public class MyDictionary {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		List<Word> mywords = new ArrayList<>();
		
		String sel, eng, kor;
		int level;
		Word word;
		System.out.println("ì„ íƒê¸°ëŠ¥ ğŸ‘‰ ,1. ë‹¨ì–´ì €ì¥ , 2.ë‹¨ì–´ê²€ìƒ‰ , 3.ë‹¨ì–´ì¥ë³´ê¸° ,4.ë ˆë²¨ë¡œ ê²€ìƒ‰, 5.í”„ë¡œê·¸ë¨ ëë‚´ê¸°");
		boolean run =true;
		while(run) {
			System.out.println("ì„ íƒ ->");
			sel = sc.nextLine();
			switch(sel)	{
				case"1":
					System.out.println("English ->");
					eng = sc.nextLine();
					System.out.println("í•œê¸€ ëœ» ->");
					kor = sc.nextLine();
					System.out.println("ë ˆë²¨ ->");
					level = Integer.parseInt(sc.nextLine());
					mywords.add(new Word(eng,kor,level));
					break;
				case"2":
					System.out.println("ê²€ìƒ‰ë‹¨ì–´ English->");
					eng = sc.nextLine();
					for(Word w : mywords)
						if(w.getEnglish().contentEquals(eng))
							System.out.println("ë‹¨ì–´ì¥ ê²€ìƒ‰í–ˆìŠµë‹ˆë‹¤." +w);
					break;
				case"3":
					all(mywords);
					break;
				case"4":
					System.out.println("ê²€ìƒ‰í•  ë ˆë²¨ ì…ë ¥(1~3 ->");
					int no = Integer.parseInt(sc.nextLine());
					level(mywords,no);
					
					break;
				case"5" :
					run=false;
					break;
					default:
						System.out.println("ì˜ëª»ì…ë ¥ëœ ì„ íƒì…ë‹ˆë‹¤.1~4ì…ë ¥ì…ë‹ˆë‹¤." );
						break;
			}
		}
	}

	private static void level(List<Word> mywords, int no) {
			for(Word w : mywords)
				if(w.getLevel()==no)
					System.out.println(w);
	}

	private static void all(List<Word> mywords) {
			mywords.sort(new Comparator<Word>() {
				@Override
				public int compare(Word o1, Word o2) {
					return o1.getEnglish().compareTo(o2.getEnglish());
				}
			});
	}
}